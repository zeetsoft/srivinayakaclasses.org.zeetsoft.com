/* Hero Slider with WordPress Background */
.hero-slider {
    position: relative;
    height: 500px;
    overflow: hidden;
    background-image: url('~/wp-content/uploads/sites/95/2023/03/bg-register-now-new.jpg');
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
    display: flex;
    align-items: center;
    justify-content: center;
}

.hero-slider::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1;
}

.slide {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 2;
}

.slide-content {
    text-align: center;
    color: white;
    z-index: 2;
}

.thim-slider-sub-heading {
    font-size: 20px;
    margin-bottom: 20px;
    font-weight: 400;
}

.thim-slider-heading {
    font-size: 70px;
    font-weight: 700;
    margin-bottom: 30px;
    line-height: 1.1;
}

.thim-slider-button {
    display: inline-block;
    padding: 11px 35px;
    background-color: var(--thim-body-primary-color);
    color: var(--thim-button-text-color);
    text-decoration: none;
    text-transform: uppercase;
    font-weight: 500;
    transition: all 0.3s;
}

.thim-slider-button:hover {
    background-color: var(--thim-button-hover-color);
    color: var(--thim-button-text-color);
}


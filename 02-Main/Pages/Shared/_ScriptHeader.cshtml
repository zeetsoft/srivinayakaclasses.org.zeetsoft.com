/* Course Grid Styles with WordPress Assets */
.courses-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    margin: 40px 0;
}

.course-card {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    transition: transform 0.3s;
}

.course-card:hover {
    transform: translateY(-5px);
}

.course-image img {
    width: 100%;
    height: 200px;
    object-fit: cover;
}

.course-content {
    padding: 20px;
}

.course-content h3 {
    margin-bottom: 10px;
    color: var(--thim-font-title-color);
}

.course-content p {
    color: var(--thim-font-body-color);
    margin-bottom: 15px;
}

/* Button Styles */
.btn {
    display: inline-block;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s;
}

.btn-primary {
    background-color: var(--thim-body-primary-color);
    color: var(--thim-button-text-color);
}

.btn-primary:hover {
    background-color: var(--thim-button-hover-color);
}

.elementor-button {
    background-color: var(--thim-body-primary-color);
    color: var(--thim-button-text-color);
    padding: 11px 30px;
    text-transform: uppercase;
    font-weight: 500;
    text-decoration: none;
    display: inline-block;
    transition: all 0.3s;
}

.elementor-button:hover {
    background-color: var(--thim-button-hover-color);
}


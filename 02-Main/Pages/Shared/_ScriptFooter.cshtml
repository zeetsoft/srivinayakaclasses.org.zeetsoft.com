<!-- Additional WordPress Theme JavaScript Initialization -->
<script type="text/javascript">
// WordPress Theme Initialization
jQuery(document).ready(function($) {
    // Remove loading overlay
    $('body').removeClass('thim-body-load-overlay');
    
    // Initialize mobile menu
    $('.mobile-menu-trigger').on('click', function() {
        $('.mobile-menu').toggleClass('active');
    });
    
    // Initialize course cards hover effects
    $('.course-card').hover(
        function() { $(this).addClass('hover'); },
        function() { $(this).removeClass('hover'); }
    );
    
    // Initialize smooth scrolling for internal links
    $('a[href^="#"]').on('click', function(event) {
        var target = $(this.getAttribute('href'));
        if (target.length) {
            event.preventDefault();
            $('html, body').stop().animate({
                scrollTop: target.offset().top - 80
            }, 1000);
        }
    });
    
    // Initialize hero slider if needed
    if ($('.hero-slider').length) {
        // Basic slider functionality can be added here
        var slides = $('.hero-slider .slide');
        var currentSlide = 0;
        
        setInterval(function() {
            slides.removeClass('active');
            currentSlide = (currentSlide + 1) % slides.length;
            slides.eq(currentSlide).addClass('active');
        }, 5000);
    }
});
</script>
